{
    "id": "com.msdshsk.charsplitter",
    "name": "CharSplitter - 文字分割ツール",
    "version": "1.0.0",
    "main": "index.html",
    "host": {
        "app": "PS",
        "minVersion": "23.3.0"
    },
    "manifestVersion": 4,
    "entrypoints": [
        {
            "type": "panel",
            "id": "mainPanel",
            "label": {"default": "文字分割"},
            "minimumSize": {"width": 200, "height": 250},
            "maximumSize": {"width": 800, "height": 600},
            "preferredDockedSize": {"width": 300, "height": 400},
            "preferredFloatingSize": {"width": 320, "height": 450},
            "icons": [
                {
                    "width": 23, "height": 23, "path": "icons/dark.png",
                    "scale": [1, 2],
                    "theme": ["darkest", "dark", "medium"]
                },
                {
                    "width": 23, "height": 23, "path": "icons/light.png",
                    "scale": [1, 2],
                    "theme": ["lightest", "light"]
                }
            ]
        }
    ],
    "icons": [
        {
            "width": 48, "height": 48, "path": "icons/plugin.png",
            "scale": [1, 2],
            "theme": ["darkest", "dark", "medium", "lightest", "light", "all"],
            "species": ["pluginList"]
        }
    ],
    "requiredPermissions": {
        "localFileSystem": "fullAccess"
    }
}
